<?xml version="1.0" encoding="UTF-8"?>
<!-- Based on https://logging.apache.org/log4j/2.x/manual/configuration.html#AutomaticConfiguration -->
<!-- Ensure this file is available at classpath / build path -->
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>